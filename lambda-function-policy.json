{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "<lambda-function-name>",
            "Effect": "Allow",
            "Action": [
                "lambda:InvokeFunction",
                "lambda:GetPolicy"
            ],
            "Resource": "arn:aws:lambda:<region>:<account-id>:function:<lambda-function>*"
        }
    ]
}